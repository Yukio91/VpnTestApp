<Window x:Class="vpn.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client" 
        xmlns:view="clr-namespace:vpn.Client.View"
        xmlns:viewModel="clr-namespace:vpn.Client.ViewModel"
        mc:Ignorable="d"
        Title="{StaticResource LS_VpnClientHeader}" Height="450" Width="800">
    <Grid>
        <ContentPresenter VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Content="{Binding ViewModel.MainPageViewModel}">
            <ContentPresenter.ContentTemplate>
                <DataTemplate DataType="viewModel:MainPageViewModel">
                    <view:MainPageView/>
                </DataTemplate>
            </ContentPresenter.ContentTemplate>
        </ContentPresenter>
    </Grid>
</Window>
